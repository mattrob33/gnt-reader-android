<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/core_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mattrobertson.greek.reader.presentation.HomeFragment"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/to_chapter_picker"
            app:destination="@id/navigation_chapter_picker"
            />

        <action
            android:id="@+id/to_plan_splash"
            app:destination="@id/navigation_plan_splash"
            />

        <action
            android:id="@+id/to_chapter_vocab"
            app:destination="@id/navigation_chapter_vocab"
            />

        <action
            android:id="@+id/to_settings"
            app:destination="@id/navigation_settings"
            />

        <action
            android:id="@+id/to_about"
            app:destination="@id/navigation_about"
            />

    </fragment>

    <fragment
        android:id="@+id/navigation_chapter_picker"
        android:name="com.mattrobertson.greek.reader.presentation.bookpicker.ChapterPickerFragment"
        tools:layout="@layout/chapter_picker">

        <argument
            android:name="book"
            app:argType="integer"
            android:defaultValue="0"
            />

    </fragment>

    <fragment
        android:id="@+id/navigation_plan_splash"
        android:name="com.mattrobertson.greek.reader.presentation.plans.PlanSplashFragment"
        tools:layout="@layout/plan_splash">

        <argument
            android:name="plan"
            app:argType="integer"
            android:defaultValue="0"
            />

    </fragment>

    <fragment
        android:id="@+id/navigation_chapter_vocab"
        android:name="com.mattrobertson.greek.reader.presentation.vocab.ChapterVocabFragment"
        tools:layout="@layout/chapter_vocab">

        <argument
            android:name="book"
            android:defaultValue="0"
            app:argType="integer" />

        <argument
            android:name="chapter"
            android:defaultValue="1"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.mattrobertson.greek.reader.presentation.SettingsFragment"
        />

    <fragment
        android:id="@+id/navigation_about"
        android:name="com.mattrobertson.greek.reader.presentation.AboutFragment"
        />

</navigation>