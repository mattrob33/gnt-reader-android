<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/core_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mattrobertson.greek.reader.presentation.home.HomeFragment"
        tools:layout="@layout/home_fragment">

        <action
            android:id="@+id/home_to_chapter_picker"
            app:destination="@id/navigation_chapter_picker"
            />

    </fragment>

    <fragment
        android:id="@+id/navigation_chapter_picker"
        android:name="com.mattrobertson.greek.reader.presentation.bookpicker.ChapterPickerFragment"
        tools:layout="@layout/chapter_picker">

        <argument
            android:name="book"
            app:argType="integer"
            android:defaultValue="0"
            />

    </fragment>

</navigation>