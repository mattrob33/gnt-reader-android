<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="450dp"
	android:layout_margin="20dp"
	android:padding="20dp"
	android:background="@color/primary"
	android:orientation="vertical" >
	<TextView
		android:id="@+id/tvVocabWizardTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:text="Vocab Wizard"
		android:textColor="#EEEEEE"
		android:layout_centerHorizontal="true"
		android:textSize="20sp"
		android:textStyle="bold"
	/>
	<TextView
		android:id="@+id/tvVocabWizardLevelLabel"
		android:layout_below="@id/tvVocabWizardTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:text="Choose your level of expertise. Your vocab list will be automatically generated based on the number of times a word appears in the SBLGNT. A 'Novice,' for example, should have memorized all words that occur 30 or more times in the SBLGNT."
		android:textColor="#EEEEEE"
		android:textSize="14sp"
	/>
	<Spinner
		android:id="@+id/spnWizLevel"
		android:layout_below="@id/tvVocabWizardLevelLabel"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp"
		android:entries="@array/expert_levels"
		/>
	<Button
		android:id="@+id/btnWiz"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#EEEEEE"
		android:layout_above="@+id/btnWizDeleteAll"
		android:layout_centerHorizontal="true"
		android:layout_margin="20dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:paddingLeft="20dp"
		android:paddingRight="20dp"
		android:clickable="true"
		android:text="GO!"
		android:textSize="16sp"
		android:textStyle="bold"
		android:textColor="@color/primary"
		/>
	<Button
		android:id="@+id/btnWizDeleteAll"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#B71C1C"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="40dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:paddingTop="7dp"
		android:paddingBottom="7dp"
		android:clickable="true"
		android:text="DELETE ALL"
		android:textSize="12sp"
		android:textColor="#EEEEEE"
		/>
</RelativeLayout>
